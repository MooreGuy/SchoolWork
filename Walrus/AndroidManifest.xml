<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guywmoorewalrus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayFactsActivity"
            android:label="@string/title_activity_display_facts" >
        </activity>
        <activity
            android:name=".DisplayPicturesActivity"
            android:label="@string/title_activity_display_pictures"
            android:parentActivityName="android.accounts.AccountAuthenticatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.accounts.AccountAuthenticatorActivity" />
        </activity>
        <activity
            android:name=".PictureViewerFragment"
            android:label="@string/title_activity_picture_viewer_fragment" >
        </activity>
        <activity
            android:name=".TitleFragment"
            android:label="@string/title_activity_title_fragment" >
        </activity>
        <activity
            android:name=".DisplayFactsFragment"
            android:label="@string/title_activity_display_facts_fragment" >
        </activity>
        <activity
            android:name=".MainMenuFragment"
            android:label="@string/title_activity_main_menu_fragment" >
        </activity>
    </application>

</manifest>
